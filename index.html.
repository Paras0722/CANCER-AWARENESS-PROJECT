<!--
    QR index page for multiple PDFs (Hindi instructions below)
    • इस फाइल को "index.html" के नाम से सेव करें।
    • नीचे दिए गए pdfLinks ऑब्जेक्ट में अपने PDFs की सार्वजनिक URL डालें।
    • होस्टिंग: GitHub Pages / Netlify (drag & drop) / किसी भी सिंगल-HTML होस्ट पर अपलोड करें।
    • QR: होस्टेड URL के लिए QR बनाइये (उदाहरण दिया गया)।

    Features:
    - मोबाइल-फ्रेंडली बटन-लिस्ट
    - इन-पेज viewer (iframe) और अलग टैब में खोलने का विकल्प
    - query parameter support: index.html?file=breast -> सीधे वह फाइल ओपन हो जाएगी
-->

<!doctype html>
<html lang="hi">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Cancer PDFs - Select Document</title>
  <style>
    :root{--bg:#f7f7fb;--card:#fff;--accent:#0b66ff}
    body{margin:0;font-family:system-ui,-apple-system,Segoe UI,Roboto,'Noto Sans',Arial;background:var(--bg);color:#111}
    .wrap{max-width:820px;margin:28px auto;padding:18px}
    header{display:flex;align-items:center;gap:12px}
    h1{margin:0;font-size:20px}
    p.lead{color:#444;margin:6px 0 18px}
    .grid{display:grid;grid-template-columns:repeat(auto-fit,minmax(200px,1fr));gap:12px}
    .card{background:var(--card);padding:12px;border-radius:12px;box-shadow:0 6px 18px rgba(10,10,20,0.06)}
    button{width:100%;padding:10px;border-radius:10px;border:0;font-weight:600;cursor:pointer}
    .open{background:linear-gradient(90deg,var(--accent),#2c8bff);color:white}
    .download{background:transparent;color:var(--accent);border:2px solid rgba(11,102,255,0.12)}
    .viewer{margin-top:16px;background:#fff;border-radius:8px;overflow:hidden;height:60vh}
    iframe{width:100%;height:100%;border:0}
    footer{margin-top:14px;color:#666;font-size:13px}
    .small{font-size:13px;color:#666}
  </style>
</head>
<body>
  <div class="wrap">
    <header>
      <div>
        <h1>कैन्सर जानकारी — PDF सूची</h1>
        <p class="lead">स्कैन करते ही उपयोगकर्ता को नीचे से किसी एक PDF का विकल्प दिखेगा।</p>
      </div>
    </header>

    <div class="grid" id="list">
      <!-- Cards generated by JS -->
    </div>

    <div id="viewerWrap" class="viewer" style="display:none">
      <iframe id="viewer" src="" title="PDF Viewer"></iframe>
    </div>

    <footer>
      <div class="small">Tip: आप चाहें तो कोई भी डायरेक्ट लिंक (index.html?file=breast) का अलग QR बना कर सीधे किसी एक PDF पर भेज सकते हैं।</div>
    </footer>
  </div>

  <script>
    // ==== यहाँ अपने PDFs की सार्वजनिक URLs डालें (replace the placeholders) ====
    const pdfLinks = {
      'breast': {
        title: 'Breast Cancer',
        url: https://www.canva.com/design/DAG0vkx8rfw/D5vaW3yMkV88b2gUs9IreA/view?utm_content=DAG0vkx8rfw&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=h7c716e989b
      },
      'lungs': {
        title: 'Lungs Cancer',
        url: https://www.canva.com/design/DAG05BHV2G0/zbXkOoRFrlZIV6mgv9yBBQ/view?utm_content=DAG05BHV2G0&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=h8346be88b9
      },
      'skin': {
        title: 'Skin Cancer',
        url: https://www.canva.com/design/DAG05KgCj4A/avmkyOI3AHI7pU0HrPrIrw/view?utm_content=DAG05KgCj4A&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=hedd1c5e4b4
      },
      'stomach': {
        title: 'Stomach Cancer',
        url: https://www.canva.com/design/DAG05Qq-7vc/LBGhnIkgIMR8MaLLO79Xkw/view?utm_content=DAG05Qq%207vc&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=hdb96481d7a
      },
      'leukemia': {
        title: 'Leukemia',
        url: https://www.canva.com/design/DAG05VXtszY/NvPD3LH76G_Cc_FvUvWhIg/view?utm_content=DAG05VXtszY&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=h3885e54470
      },
      'oral': {
        title: 'Oral & Throat Cancer',
        url: https://www.canva.com/design/DAG05Rm5XQU/gnv_MIZm2xTaMvfDiINneA/view?utm_content=DAG05Rm5XQU&utm_campaign=designshare&utm_medium=link2&utm_source=uniquelinks&utlId=he9d197fb77
      }
    };

    const list = document.getElementById('list');
    const viewerWrap = document.getElementById('viewerWrap');
    const viewer = document.getElementById('viewer');

    // Create cards
    for (const key of Object.keys(pdfLinks)){
      const item = pdfLinks[key];
      const card = document.createElement('div');
      card.className = 'card';
      card.innerHTML = `
        <div style="margin-bottom:8px;font-weight:700">${item.title}</div>
        <div style="display:flex;gap:8px">
          <button class="open" onclick="openInViewer('${key}')">Open</button>
          <button class="download" onclick="downloadPDF('${key}')">Download</button>
        </div>`;
      list.appendChild(card);
    }

    function openInViewer(key){
      const url = pdfLinks[key].url;
      if(!url || url.includes('REPLACE_WITH')){alert('PDF URL सेट करें।');return}
      viewer.src = url;
      viewerWrap.style.display = 'block';
      // For mobile: scroll viewer into view
      setTimeout(()=>viewerWrap.scrollIntoView({behavior:'smooth'}),150);
    }

    function downloadPDF(key){
      const url = pdfLinks[key].url;
      if(!url || url.includes('REPLACE_WITH')){alert('PDF URL सेट करें।');return}
      // open in new tab (browser will handle download or view)
      window.open(url, '_blank');
    }

    // Query param support: ?file=breast
    function getQueryParam(name){
      const params = new URLSearchParams(window.location.search);
      return params.get(name);
    }
    const qfile = getQueryParam('file');
    if(qfile && pdfLinks[qfile]){
      // auto-open
      openInViewer(qfile);
    }

    // Optional: hide viewer if user closes it (not implemented) - you can extend
  </script>
</body>
</html>
